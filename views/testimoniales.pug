extends ./layout/index

block contenido
    main.container.mt-5
        
        h1.mt-5.text-center #{pagina}

        blockquote.text-center Lee sobre nuestros clientes y sus experiencias
        
        include ./layout/bloque_testimoniales

        .row 
            h2.d-block.w-100.text-center Agregue un Testimonial 

        if(errores)
            .row.justify-content-center.col.mt-2.mb-1 
                each error in errores 
                    .col-md-8.alert.alert-danger.text-center= error.mensaje
            
        .row.justify-content-center.col 
            .col-md-8
                form.mt-4(action="/testimoniales" method="POST")
                    .form-group 
                        label.font-weight-bold(for="nombre") Nombre
                        input#nombre(type="text", name="nombre", class="form-control", value= nombre, placeholder="Tu Nombre")

                    .form-group 
                        label.font-weight-bold(for="correo") Correo Electr√≥nico
                        input#correo(type="text", name="correo", class="form-control", value= correo, placeholder="Tu Correo")
                    
                    .form-group 
                        label.font-weight-bold(for="mensaje") Mensaje
                        textarea#mensaje(name="mensaje", class="form-control", placeholder="Tu Mensaje", rows=3)= mensaje

                    button.btn.btn-success.btn-block.font-weight-bold(type="submit") Enviar Testimonial

